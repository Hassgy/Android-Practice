<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 标签 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 标签容器组件：一 -->
        <android.support.design.widget.TabLayout
            android:id="@+id/tabTL"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:tabBackground="@android:color/transparent"
            app:tabIndicatorColor="#FF0000"
            app:tabIndicatorHeight="0.5dp" />

        <!-- 标签容器组件：二 -->
        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magicMI"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <!-- 具体的标签：TabLayout使用 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/tab1FL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="标签页1" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab2FL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="标签页2" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- 具体的标签页 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 存放标签的容器 -->
        <!-- ViewPager容器必须和具体的标签分开排放，否则会崩溃 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 如果支持滑动，则使用该容器 -->
            <android.support.v4.view.ViewPager
                android:id="@+id/containerVP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- 如果不支持滑动，则使用该容器 -->
            <FrameLayout
                android:id="@+id/containerFL"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- 具体的标签 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 具体的标签页1 -->
            <LinearLayout
                android:id="@+id/tabPage1LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签页1" />

            </LinearLayout>

            <!-- 具体的标签页2 -->
            <LinearLayout
                android:id="@+id/tabPage2LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签页2" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</LinearLayout>